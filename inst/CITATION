citHeader("To cite ebirdst in publications use:")

citEntry(
  entry        = "Manual",
  title        = "ebirdst: Tools for loading, plotting, mapping and analysis of eBird Status and Trends data products",
  author       = personList(
                   as.person("Matthew Strimas-Mackey"),
                   as.person("Shawn Ligocki"),
                   as.person("Tom Auer"),
                   as.person("Daniel Fink")
                 ),
  year         = "2022",
  note         = "R package version 1.2021.0",
  url          = "https://cornelllabofornithology.github.io/ebirdst/",

  textVersion  =
  paste("Matthew Strimas-Mackey, Shawn Ligocki, Tom Auer, Daniel Fink (2022).",
        "ebirdst: Tools for loading, plotting, mapping and analysis of eBird Status and Trends data products.",
        "R package version 1.2021.0.",
        "https://cornelllabofornithology.github.io/ebirdst/")
)
